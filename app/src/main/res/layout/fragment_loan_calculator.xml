<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_black"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--TOP TEXT-->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee"
                android:text="Ea$y Loan"
                android:textAlignment="center"
                android:textColor="@color/theme_yellow"
                android:textSize="34sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/amountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Loan Amount"
                    android:textColor="@color/theme_white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/amountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_style"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:text="5000.00"
                    android:hint="$0.00"
                    android:textColor="@color/theme_black"
                    />

            </LinearLayout>

            <!--////////////LOAN AMOUNT////////////-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/termTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Term"
                    android:textColor="@color/theme_white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/yearEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_style"
                        android:ems="10"
                        android:hint="Years"
                        android:inputType="numberDecimal"
                        android:textAlignment="textStart"
                        android:textColor="@color/theme_black"
                        android:textColorHint="@color/theme_black" />

                    <EditText
                        android:id="@+id/monthEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_style"
                        android:ems="10"
                        android:hint="Months"
                        android:inputType="numberDecimal"
                        android:textAlignment="textStart"
                        android:textColor="@color/theme_black"
                        android:textColorHint="@color/theme_black" />
                </LinearLayout>
            </LinearLayout>

            <!--////////////PAYMENT TIME////////////-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/paymentTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Payment Time"
                    android:textColor="@color/theme_white"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/paymentTimeRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/paymentRadioWeekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/theme_yellow"
                        android:hapticFeedbackEnabled="true"
                        android:text="Weekly"
                        android:textColor="@color/theme_white" />

                    <RadioButton
                        android:id="@+id/paymentRadioMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/theme_yellow"
                        android:checked="true"
                        android:text="Monthly"
                        android:textColor="@color/theme_white" />

                    <RadioButton
                        android:id="@+id/paymentRadioAnnual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/theme_yellow"
                        android:checked="false"
                        android:text="Annual"
                        android:textColor="@color/theme_white" />

                </RadioGroup>
            </LinearLayout>
            <!--////////////Compound////////////-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/compoundTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Compound"
                    android:textColor="@color/theme_white"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/compoundRadioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/compoundRadioWeekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/theme_yellow"
                        android:checked="false"
                        android:text="Weekly"
                        android:textColor="@color/theme_white" />

                    <RadioButton
                        android:id="@+id/compoundRadioMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/theme_yellow"
                        android:checked="true"
                        android:text="Monthly"
                        android:textColor="@color/theme_white" />

                    <RadioButton
                        android:id="@+id/compoundRadioAnnual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/theme_yellow"
                        android:text="Annual"
                        android:textColor="@color/theme_white" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/interestRateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Interest Rate"
                    android:textColor="@color/theme_white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/interestRatePercentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="4%"
                        android:textColor="@color/theme_white"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/interestSeekBar"
                        style="@style/Widget.AppCompat.SeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:progress="4"
                        android:progressTint="@color/theme_yellow" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/loanSubmitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="130dp"

                android:backgroundTint="@color/theme_yellow"
                android:fontFamily="@font/poppins"
                android:text="Submit"
                android:textSize="16sp" />


        </LinearLayout>
</LinearLayout>