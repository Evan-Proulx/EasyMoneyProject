<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_black"
    android:orientation="vertical"
    android:paddingHorizontal="70dp"
    tools:context=".Fragments.ContactFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!--        title text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_black"
                    android:fontFamily="@font/bungee"
                    android:text="Contact Us"
                    android:textAlignment="center"
                    android:textColor="@color/theme_yellow"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="If you have any issues with the app or want to learn more, contact the Easy Money team here!"
                    android:textAlignment="center"
                    android:textColor="@color/theme_white"
                    android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--email us text-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/theme_black"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <ImageView
                        android:id="@+id/emailImg"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_baseline_email_24" />

                    <TextView
                        android:id="@+id/emailUsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Email"
                        android:textAlignment="textStart"
                        android:textColor="@color/theme_yellow"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <!-- subject editText-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/subjectTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Subject"
                        android:textColor="@color/theme_white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/subjectEitText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_style"
                        android:ems="10"
                        android:hint="Subject"
                        android:textColor="@color/theme_black" />
                </LinearLayout>

                <!--            email message edit text-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Message"
                        android:textColor="@color/theme_white"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="Enter message"
                        android:textColor="@color/theme_black" />

                    <Button
                        android:id="@+id/emailSubmitBtn"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/theme_yellow"
                        android:fontFamily="@font/poppins"
                        android:text="Submit"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <!--other contacts layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="@color/theme_black"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/callUsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Us"
                    app:icon="@drawable/ic_baseline_contact_phone_24" />


                <Button
                    android:id="@+id/textUsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Text Us"
                    app:icon="@drawable/ic_baseline_message_24" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
