<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_black"
    android:orientation="vertical"
    tools:context=".ContactFragment">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_black"
        android:fontFamily="@font/bungee"
        android:text="Contact Us"
        android:textAlignment="center"
        android:textColor="@color/theme_yellow"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="If you have any issues with the app or want to learn more, contact the Easy Money team here!"
        android:textAlignment="center"
        android:textColor="@color/theme_white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_black">

        <ImageButton
            android:id="@+id/callBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_contact_phone_24" />

        <TextView
            android:id="@+id/callTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Call Us"
            android:textAlignment="textStart"
            android:textColor="@color/theme_white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_black">

        <ImageButton
            android:id="@+id/textBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_message_24" />

        <TextView
            android:id="@+id/textTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Text Us"
            android:textAlignment="textStart"
            android:textColor="@color/theme_white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_black"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/emailBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_email_24" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Email Us"
            android:textAlignment="textStart"
            android:textColor="@color/theme_white"
            android:textSize="20sp"
            android:textStyle="bold" />



    </LinearLayout>

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_margin="30dp"
        android:background="@drawable/edit_text_style"
        android:hint="Enter Text here"
        android:textAlignment="center"
        android:textColor="@color/theme_black" />

    <Button
        android:id="@+id/emailSubmitBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/theme_yellow"
        android:fontFamily="@font/poppins"
        android:text="Submit"
        android:textAlignment="center"
        android:textSize="16sp" />


